	script(type="text/javascript").
		function changeTitle(setting) {
			var title = '';
			var page = '';
			var source = '';
			var detail = '';
			var images = ['http://www.cis.upenn.edu/~mkearns/teaching/NetworkedLife/bgc-sci.jpg',
										'http://www.jacobsschool.ucsd.edu/uploads/news_release/2007/Rescaled_2k.jpg',
										'http://cinet.vbi.vt.edu/cinet_new/sites/all/themes/professional_theme/images/slide-image-2.jpg'];
			if (setting == '598'){
				title = 'CSE598';
				page = 'Using C#, ASP.net to learn how to develop web services and deal with multithread, XML and ASP.net security.';
				source = 'http://www.cis.upenn.edu/~mkearns/teaching/NetworkedLife/bgc-sci.jpg'
				detail = 'http://vlab.asu.edu/LabPages/CSE598_Chen.htm'
				image = images[0];
			}
			if (setting == '545'){
				title = 'CSE545';
				page = 'Simulate various failures in a software system\'s environment and test whether the software can securely handle the environmental failures.';
				source = 'http://www.jacobsschool.ucsd.edu/uploads/news_release/2007/Rescaled_2k.jpg';
				detail = 'http://vlab.asu.edu/LabPages/CSE%20545%20Software%20Security%20Lab%20Assignment%201.html';
				image = images[1];
			}
			if (setting == '468'){
				title = 'CSE5468';
				page = 'Learn to install, start and configure network servers and security features.';
				source = 'http://cinet.vbi.vt.edu/cinet_new/sites/all/themes/professional_theme/images/slide-image-2.jpg';
				detail = 'http://vlab.asu.edu/LabPages/CSE468598_project1.html';
				image = images[2];
			}
			if (setting == '465'){
				title = 'CSE465';
				page = 'Concepts of information assurance, basic IA techniques, policies, risk management, administration, legal and ethics issues.';
				source = 'http://www.cis.upenn.edu/~mkearns/teaching/NetworkedLife/bgc-sci.jpg'
				detail = 'http://vlab.asu.edu/LabPages/CSE465.html';
				image = images[0];
			}
			if (setting == '545'){
				title = 'CSE545';
				page = 'A Web-based Document Management System (WDMS) is a software system to facilitate access access to all the documents within an organization through the Internet. An organization often needs to track various documents generated by all the users of the organization. For example, Human Resources Department keeps track of all the pay-roll and benefits information; Sales Department maintains sales record, etc.';
				source = 'http://www.jacobsschool.ucsd.edu/uploads/news_release/2007/Rescaled_2k.jpg';
				detail = 'http://vlab.asu.edu/LabPages/CSE%20545%20Doc%20Mgt%20Sys.html';
				image = images[1];
			}
			if (setting == '548'){
				title = 'CSE548';
				page = 'The topics will be covered prmarily in authentication, access control, capability, security policies, basic cryptography, and software vulnerabilities. You will gain exposure to burgeoning areas of network security and learn how to use the tools commonly used for networking research today. Most of these principles will be studied within the scope of concrete systems, such as Linux, Windows, Minix, and Cloud Computing. The course emphasize on "learning by doing". It requires students to conduct a research related project to enhance their understanding of principles, and also to provide students with oppurtunities to apply those principles.';
				source = 'http://cinet.vbi.vt.edu/cinet_new/sites/all/themes/professional_theme/images/slide-image-2.jpg';
				detail = 'http://vlab.asu.edu/LabPages/CSE548_adv_network.html';
				image = images[2];
			}
			if (title != '') {
				$('#title').text(title);
				$('#page').text(page);
				$('#image').attr("src", image);
				$('#detail').attr("href",detail);
				$('#joinBtn').prop('href', '/topics/'+title);
			}
		}
